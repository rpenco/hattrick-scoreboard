<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- ============================================================= -->
    <!-- ============================================================= -->

    <style name="roundedEditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="contentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:background">@drawable/btn_layout_normal</item>
    </style>

    <style name="buttonDefault" parent="@android:style/Widget.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#333</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="headerDefault" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#73a977</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2C2B29</item>
        <item name="android:background">@drawable/ic_header_primary_bg</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>