<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_listview"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/player_avatar_width"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:src="@drawable/ic_player_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/ivFlag"
                    android:text="@string/label_unavailable"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/player_name_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivFlag"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_flag" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:id="@+id/llStars"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivCard"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_yellow_red_card" />

        <ImageView
            android:id="@+id/ivTransfer"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_transfer" />

        <ImageView
            android:id="@+id/ivInjury"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_injury_minor" />

        <TextView
            android:id="@+id/tvInjuryLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ivInjury"
            android:gravity="center_vertical"
            android:textSize="9sp" />

    </RelativeLayout>

</LinearLayout>