<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_listview"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvPos"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/ivPos"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_equal" />

    <ImageView
        android:id="@+id/ivLogoBadge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:src="@drawable/ic_drawer_general" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Buros FC"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tvMatches"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="14"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tvGoals"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="100:100"
        android:textSize="@dimen/text_size"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvDiff"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="99"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/tvPts"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="7dp"
        android:gravity="center"
        android:text="99"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />

</LinearLayout>