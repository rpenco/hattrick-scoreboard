<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            style="@style/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTeamName"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_header_primary_bg"
                    android:padding="5dp"
                    android:text="@string/label_unavailable"
                    android:textColor="@color/text_default" />

                <TextView
                    android:id="@+id/tvTeamID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tvTeamName"
                    android:layout_alignBottom="@+id/tvTeamName"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/label_unavailable"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_small_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/club_logo_height"
                    android:layout_marginTop="5dp"
                    android:background="#EEE"
                    android:contentDescription="@string/label_unavailable"
                    android:src="@drawable/ic_team_logo" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvDivision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_match_series"
                android:gravity="center_vertical"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default" />

            <TextView
                android:id="@+id/tvCup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_cup_other"
                android:gravity="center_vertical"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default" />

            <TextView
                android:id="@+id/tvInfos"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_info"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default" />
        </LinearLayout>

        <LinearLayout
            style="@style/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleInfos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_header_primary_bg"
                android:padding="5dp"
                android:text="@string/label_informations"
                android:textColor="@color/text_default" />

            <TextView
                android:id="@+id/tvRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_layout"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvArena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_layout"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvSupporters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_layout"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_layout"
                android:text="@string/label_unavailable"
                android:textColor="@color/text_default"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            style="@style/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleDress"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_weight="1"
                android:background="@drawable/ic_header_primary_bg"
                android:padding="5dp"
                android:text="@string/club_title_match_kit"
                android:textColor="@color/text_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivDressHome"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/club_logo_height"
                        android:src="@drawable/ic_player_shirt_neutral" />

                    <TextView
                        android:id="@+id/tvLabelHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/club_label_home"
                        android:textColor="@color/text_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivDressAway"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/club_logo_height"
                        android:src="@drawable/ic_player_shirt_neutral" />

                    <TextView
                        android:id="@+id/tvLabelAway"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/club_label_away"
                        android:textColor="@color/text_default" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>