<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_layout_normal"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/ic_player_avatar" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/ivAvatar"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ivType"
            android:text="@string/label_unavailable"
            android:textColor="@color/text_default"
            android:textSize="@dimen/player_name_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivType"
            android:layout_width="14dp"
            android:layout_height="20dp"
            android:layout_above="@+id/tvType"
            android:layout_toRightOf="@+id/ivAvatar"
            android:src="@drawable/ic_staff_1" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_toRightOf="@+id/ivAvatar"
            android:text="@string/label_unavailable"
            android:textColor="@color/text_default"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tvCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvType"
            android:layout_below="@+id/tvType"
            android:gravity="right"
            android:text="@string/label_unavailable"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivAvatar"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="@string/label_unavailable"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>